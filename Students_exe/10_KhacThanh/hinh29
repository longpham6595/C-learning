#include <iostream>
using namespace std;
int n;
void nhap(){
    cin>>n;
}
void xuli(){
    for(int i=1;i<=n;i++){
        for(int j=1;j<=i;j++){
            cout<<"*";
        }
        for(int k=n;k>i;k--)
            cout<<"#";
        cout<<endl;
    }
}
int main(){
    nhap();
    xuli();
    return 0;
}
