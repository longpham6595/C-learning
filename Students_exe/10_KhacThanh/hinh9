#include <iostream>
using namespace std;
int n;
void nhap(){
    cin>>n;
}
void xuat(){
    for(int i=1;i<=n;i++){
         for(int k=i;k>=1;k--){
            cout<<" ";
         }
         for(int j=n;j>=i;j--){
             cout<<"*";
         }
         cout<<endl;
    }
}
int main(){
    nhap();
    xuat();
    return 0;
}
